<h1>Edit Section</h1>

<%=  form_for :section, url:section_path, method: :patch, local: true do |form| %>

  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@section.errors.count, "error") %> prohibited
        this section from being saved:
      </h2>
      <ul>
        <% @section.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :semester %><br>
    <%= form.text_field :semester %>
  </p>

  <p>
    <%= form.label :number, 'Section Number' %><br>
    <%= form.text_field :number %>
  </p>

  <p>
    <%= form.label :roomNumber, 'Room Number' %><br>
    <%= form.text_field :roomNumber %>
  </p>

  <p>
    <%= form.label :course_id, 'Course' %><br>
    <%= form.collection_select(:course_id, Course.all, :id, :name) %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<p>
  <%= link_to 'View Sections', sections_path %>
<p/>

<p>
  <a href="/" >Home</a>
</p>