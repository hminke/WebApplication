<h1>Sections</h1>

<p>
  <%= form_tag(sections_path, method: :get) do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>
<p/>

<table cellpadding="10" cellspacing="0" border="1">
  <tr>
    <th>Semester</th>
    <th>Section Number</th>
    <th>Room Number</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @sections.each do |section| %>
    <tr>
      <td><%= section.semester %></td>
      <td><%= section.number %></td>
      <td><%= section.roomNumber %></td>
      <td><%= section.course.name %></td>
      <td><%= link_to 'Show', section_path(section) %></td>
      <td><%= link_to 'Edit', edit_section_path(section) %></td>
      <td><%= link_to 'Delete', section_path(section),
              method: :delete,
              data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'New Section', new_section_path %>
</p>